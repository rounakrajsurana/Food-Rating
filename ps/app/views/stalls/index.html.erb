<p id="notice"><%= notice %></p>

<h1>Stalls</h1>

<table>
  <thead>
    <tr>
      <th>Created At</th>
      <th>Name</th>
      <th>Description</th>
      <!-- <th>Latlog</th> -->
      <th>Created By</th>
      <th>Updated At</th>
      <th colspan="3">- Admin Only -</th>
    </tr>
  </thead>
  <tbody>
    <% @stalls.each do |stall| %>
      <tr>
        <td><%= stall.created_at %></td>
        <td><%= stall.name %></td>
        <td><%= stall.desc %></td>
        <!-- <td><%= stall.latlog %></td> -->
        <td><%= stall.user.email %></td>
        <td><%= stall.updated_at %></td>
        <td><%= link_to 'Show', stall %></td>
        <% if current_user.admin? %>
          <td><%= link_to 'Edit', edit_stall_path(stall) %></td>
          <td><%= link_to 'Destroy', stall, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<% if current_user.admin? %>
  <p class='center'><%= image_tag("add-circle.png", size: "16x16", :alt => "New") %>&nbsp;
  <%= link_to 'New Stall ', new_stall_path %></p>
<% end %>
