  <div class="form-group">
    <div class="align-right">
    <div class="row">
      <div class="col-sm-4">
       <%= f.label :Picture %>
        <% if resource.avatar.attached? %>
          <%= image_tag(resource.avatar, class: "rounded-circle") %>
        <% end %>
      </div>
    </div>

      <div class="col-sm-8">
        <%= f.file_field :avatar %>
      </div>
    </div>
  </div>
  <br> -->
  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <div class="field">
    <%= f.label :fullname %><br />
    <%= f.text_field :fullname, autofocus: true, autocomplete: "fullname" %>
  </div>
  <div class="field">
    <%= f.label :contactno %><br />
    <%= f.text_field :contactno, autofocus: true, autocomplete: "contactno"  %>
  </div>
<br />
  <%= f.label :Picture %>
  <div class="form-group">  
          <% if resource.avatar.attached? %>
            <%= image_tag(resource.avatar, size: "150x100", class: "rounded-circle") %>
          <% end %>      
        
        <%= f.file_field :avatar %>  
    </div>
  
  <br />
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
  <%= render "devise/shared/links" %>
<% end %>
