<!-- ================================ New Dishes ================================ -->
<div class='ablock'>
  <div class='ahead'>
  <h4>Last Update <%=image_tag('new-br.png', size: "80x40")%></h4>
  <table>
    <tbody>
      <% col_size = 1
          @newdishes.each do |dish|
              if (col_size%4)>0
                tropen = '<tr>'
              else
                tropen = ''
              end %>
              <td><%= link_to image_tag(dish.picture, size: "200x150", :alt => dish.name), dish %>
              <br><p class='center'><%= col_size.to_s+'. '+dish.name %></p></td>
              <%if (col_size%4)>0
                trclose = '</tr>'
              else
                trclose = ''
              end
              col_size = col_size+1
         end %>
    </tbody>
  </table>
  <%= will_paginate @newdishes %>
  </div>
</div>
