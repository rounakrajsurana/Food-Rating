    <% if flash[:error] %>
        <div id="error">
        <p><mark color='red'><%= flash[:error] %></mark></p>
        </div>
    <% elsif flash[:alert] %>
        <div>
        <p></mark><%= flash[:alert] %></mark></p>
        </div>
    <% end %>
    <!-- Second navbar for search -->
    <nav class="navbar navbar-inverse">
      <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->

        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse-3">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#"></a>
        </div>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="navbar-collapse-3">
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "Home", home_index_path %>&nbsp;</li>
            <li> <%= link_to "Categories", categories_path %> </li>
            <li> <%= link_to "Stalls", stalls_path %> </li>
            <li> <%= link_to "Dishes", dishes_path %> </li>
            <li> <%= link_to "Reviews", ratings_path %> </li>
            <% if user_signed_in? %>
              <% if current_user.admin? %>
              <li><%= link_to "Admin", '/admin' %></li>
              <li><%= link_to "Users", '/admin/user' %></li>
              <% end %>
              <% if current_user.stall? %>
                <li><%= link_to "My Stall", '/home/stall' %></li>
              <% end %>
              <li><a href="#">My Reviews</a></li>
              <li><%= link_to "My Profile", '/home/member' %></li>
            <% end %>
            <li><a href="#">About</a></li>
            <li><a href="#">Contact</a></li>
            <li>
              <a class="btn btn-default btn-outline btn-circle collapsed"  data-toggle="collapse" href="#nav-collapse3" aria-expanded="false" aria-controls="nav-collapse3">Search</a>
            </li>
          </ul>
          <div class="collapse nav navbar-nav nav-collapse slide-down" id="nav-collapse3">
            <form class="navbar-form navbar-right" role="search">
              <div class="form-group">
                <input type="text" class="form-control" placeholder="Search" />
              </div>
              <button type="submit" class="btn btn-danger"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
            </form>
          </div>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container -->
    </nav><!-- /.navbar -->
    <% if user_signed_in? %>
      Welcome <%= current_user.email %> ! Not you?
