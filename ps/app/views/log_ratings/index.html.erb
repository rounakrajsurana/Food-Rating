<h1>Log Ratings</h1>

<table>
  <thead>
    <tr>
      <th>Created At</th>
      <th>Rating ID</th>
      <th>Dish ID</th>
      <th>Rate</th>
      <th>Review</th>
      <th>Created By</th>
      <th>Updated At</th>
     
    </tr>
  </thead>

  <tbody>
    <% @log_ratings.each do |rating| %>
      <tr>
        <td><%= rating.created_at %></td>
        <td><%= rating.rating_id %></td>
        <td>
          <%if rating.dish.name %>
          <%= rating.dish.name %>
          <%end%>
        </td>
        <td><%= rating.rate %></td>
        <td><%= rating.comment %></td>
        <td><%= rating.user.email %></td>
        <td><%= rating.updated_at %></td>
        <td>
              <% if user_signed_in? && current_user.admin? %>
                <div class="links btn-group">
                  <%= link_to "Delete", log_rating_path(rating), method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-custom" %>
                </div>
              <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
