<p id="notice"><%= notice %></p>

<h1>Ratings</h1>

<table>
  <thead>
    <tr>
      <th>Created At</th>
      <th>Dish ID</th>
      <th>Rate</th>
      <th>Review</th>
      <th>Created By</th>
      <th>Updated At</th>
      <th colspan="3">- Admin Only -</th>
    </tr>
  </thead>

  <tbody>
    <% @ratings.each do |rating| %>
      <tr>
        <td><%= rating.created_at %></td>
        <td><%= rating.dish_id %></td>
        <td><%= rating.rate %></td>
        <td><%= rating.comment %></td>
        <td><%= rating.user.email %></td>
        <td><%= rating.updated_at %></td>
        <td>
        				<div class="links btn-group">
                    <%= link_to "Edit", edit_dish_rating_path(rating.dish_id, rating), class: "btn btn-custom" %>
                    <%= link_to "Delete", rating_path(rating), method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-custom" %>
                    <!--
                    <%# <%= link_to "Delete", dish_path(rating.dish, rating), method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-custom" %> %>
                    -->
                </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
