<p id="notice"><%= notice %></p>

<h1>Ratings</h1>

<table>
  <thead>
    <tr>
      <th>Created At</th>
      <th>Dish ID</th>
      <th>Rate</th>
      <th>Review</th>
      <th>Created By</th>
      <th>Updated At</th>
      <th colspan="3">- Admin Only -</th>
    </tr>
  </thead>

  <tbody>
    <% @ratings.each do |rating| %>
      <tr>
        <td><%= rating.created_at %></td>
        <td><%= rating.dish_id %></td>
        <td><%= rating.rate %></td>
        <td><%= rating.comment %></td>
        <td><%= rating.user.email %></td>
        <td><%= rating.updated_at %></td>
        <% if current_user.admin? %>
          <td><%= link_to 'Show', rating %></td>
          <td><%= link_to 'Edit', edit_rating_path(rating) %></td>
          <td><%= link_to 'Destroy', rating, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<% if current_user.admin? %>
  <p class='center'><%= image_tag("add-circle.png", size: "16x16", :alt => "New") %>&nbsp;
  <%= link_to 'New Rating', new_rating_path %>
<% end %>
